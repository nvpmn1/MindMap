{
  "name": "mindmap-hub-backend",
  "version": "1.0.0",
  "description": "Backend API for MindMap Hub",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc --skipLibCheck",
    "start": "npm run build && node dist/index.js",
    "test": "npm run test:contracts",
    "test:contracts": "npm run build && node --test dist/ai/contracts/*.test.js",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "cleanup": "ts-node scripts/cleanup-database.ts"
  },
  "dependencies": {
    "@logtail/node": "^0.5.6",
    "@sentry/node": "^10.38.0",
    "@anthropic-ai/sdk": "^0.32.1",
    "@supabase/supabase-js": "^2.47.10",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^8.57.1",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
